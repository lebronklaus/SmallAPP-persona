/* pages/news/news-collection/news-collection-item/news-collection-item.wxss */
.news-container{
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;

}

.news-author-date{
    margin: 10rpx 0 20rpx 10rpx;
  }
  
  .news-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
  }
  
  .news-date{
    margin-left: 20rpx;
    margin-bottom: 5px;
    font-size: 26rpx;
    vertical-align: middle;
  }
  
  .news-title{
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
  }
  
  .news-image{
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 15px;
  }
  
  .news-content{
    color: #666;
    font-size: 28rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
  }
  
  .news-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
  }
  
  .news-like-image{
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
  }
  
  .news-like-font{
    vertical-align: middle;
    margin-right: 20px;
  }